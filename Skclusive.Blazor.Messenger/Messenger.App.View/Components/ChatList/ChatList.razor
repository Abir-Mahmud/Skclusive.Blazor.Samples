@namespace Skclusive.Blazor.Messenger.App.View

@foreach(var item in ChatItems)
{
    <ChatListItem
        @key="@item.Name"
        ChatItem="@item"
        Concise="@Concise" />
}

@code
{
    [Parameter]
    public bool Concise { set; get; }

    [Parameter]
    public IEnumerable<ChatItem> ChatItems { set; get; }
}
