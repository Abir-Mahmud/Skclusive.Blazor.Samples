@namespace Skclusive.Messenger.App.View
@inherits StyleComponentBase

.ChatBlock-Avatar {
    width: 30px;
    height: 30px;
}

.ChatBlock-Row-Right {
    margin-left: auto;
}

.ChatBlock-Box {
    display: flex;
    align-items: center;
    margin-bottom: 4px;
}

.ChatBlock-Box:hover .ChatBlock-Icon {
    opacity: 1;
}

.ChatBlock-Box-Left {
    text-align: left;
}

.ChatBlock-Box-Right {
    text-align: right;
    flex-direction: row-reverse;
}

.ChatBlock-Message {
    display: inline-block;
    padding: 8px 16px;
    font-size: 14px;
    max-width: 70%;
    word-break: break-word;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    border-radius: 4px;
}

.ChatBlock-Message-Left {
    background-color: #f5f5f5;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
}

.ChatBlock-Message-Right {
    color: #fff;
    background-color: rgb(0, 153, 255);
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
}

.ChatBlock-First-Left {
    border-top-left-radius: 20px;
}

.ChatBlock-First-Right {
    border-top-right-radius: 20px;
}

.ChatBlock-Last-Left {
    border-bottom-left-radius: 20px;
}

.ChatBlock-Last-Right {
    border-bottom-right-radius: 20px;
}

.ChatBlock-Icon {
    color: rgba(0,0,0,0.34);
    margin: 0 4px;
    opacity: 0;
    padding: 6px;
}

.ChatBlock-Icon:hover {
    color: rgba(0,0,0,0.87);
}

.ChatBlock-Icon svg {
    font-size: 20px;
}

.ChatBlock-Image {
    max-width: 120px;
    max-height: 120px;
}

.ChatBlock-Time {
    color: rgba(0,0,0,0.4);
    margin: 12px 0;
    font-size: 12px;
    text-align: center;
    font-weight: 500;
}
