@page "/counter"

<Typography
    Variant="@TypographyVariant.H5">
    Counter
</Typography>

<Typography
    Variant="@TypographyVariant.Body2">
    Current count: @currentCount
</Typography>

<Button
    Color="@Color.Primary"
    OnClick="IncrementCount">
    Click me
</Button>

@code
{
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
