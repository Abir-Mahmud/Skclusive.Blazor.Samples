@namespace Skclusive.Material.App.View

@inherits PureComponentBase

@page "/mobx-counter"

<Typography Variant="@TypographyVariant.H5">
    Counter
</Typography>

<Typography Variant="@TypographyVariant.Body2">
    Current count: @currentCount.Value
</Typography>

<Skclusive.Material.Button.Button Color="@Skclusive.Core.Component.Color.Primary"
                                  OnClick="IncrementCount">
    Click me
</Skclusive.Material.Button.Button>

@code
{
    private IObservableValue<int> currentCount = ObservableValue<int>.From(0);

    private void IncrementCount()
    {
        currentCount.Value++;
    }
}
