@inherits LayoutComponentBase

<MainLayout ContentStyle="padding: 30px;">
    <BodyContent>
        @Body
    </BodyContent>
    <ProfileContent
        Context="profile">
        <Profile
            Class="@profile.Item1"
            Style="@profile.Item2"
            Name="Shen Zhi"
            Avatar="./images/profile.png"
            Bio="Brain Director">
        </Profile>
    </ProfileContent>
     <NavigationContent
        Context="navigation">
        <Navigation
            Class="@navigation.Item1"
            Style="@navigation.Item2"
            Items="@Items">
        </Navigation>
    </NavigationContent>
</MainLayout>

@code
{
     private List<NavigationItem> Items = new List<NavigationItem>
    {
        new NavigationItem
        {
            Title = "Home",
            Path = "",
            Icon = @<HomeIcon />,
            Prefix = false
        },

        new NavigationItem
        {
            Title = "Counter",
            Path = "counter",
            Icon = @<AddIcon />,
            Prefix = true
        },

        new NavigationItem
        {
            Title = "Fetch Data",
            Path = "fetchdata",
            Icon = @<ListIcon />,
            Prefix = true
        }
    };
}
