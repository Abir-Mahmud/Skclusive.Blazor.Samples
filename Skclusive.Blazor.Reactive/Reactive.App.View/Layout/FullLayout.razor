@namespace Skclusive.Reactive.App.View
@inherits LayoutComponentBase

<MainLayout
    ContentStyle="padding: 30px;">
    <TitleContent>
        <Typography
            Style="flex-grow: 1; margin-left: 20px;"
            Variant="@TypographyVariant.H6"
            NoWrap>
            Skclusive-UI
        </Typography>
    </TitleContent>
    <BodyContent>
        @Body
    </BodyContent>
    <ActionsContent>
        <ToggleTheme />
    </ActionsContent>
    <SidebarContent>
        <Navigation
            Class="FullLayout-Navigation"
            Items="@Items">
        </Navigation>
    </SidebarContent>
</MainLayout>

