  <AppBar Class="topbar-root">
    <Toolbar>
        <NavLink href="./" Match="@NavLinkMatch.Prefix">
            <AppLogo />
        </NavLink>
        <div class="topbar-flex-grow" />
        <Hidden MediumDown>
            <IconButton Color="@Color.Inherit">
                <Badge
                    Nib="@Notifications"
                    Color="@Color.Primary"
                    Variant="@NibVariant.Dot">
                    <NotificationsOutlinedIcon />
                </Badge>
            </IconButton>
            <IconButton
                Class="topbar-signout-button"
                Color="@Color.Inherit">
                <InputIcon />
            </IconButton>
        </Hidden>
        <Hidden LargeUp>
            <IconButton
                Color="@Color.Inherit"
                OnClick="@OnSidebarOpen">
                <MenuIcon />
            </IconButton>
        </Hidden>
    </Toolbar>
</AppBar>

@code
{
    private string Notifications = "10";

    [Parameter]
    public Action OnSidebarOpen { set; get; }
}
