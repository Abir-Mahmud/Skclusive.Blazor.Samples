@namespace Skclusive.Dashboard.App.View
@inherits StyleComponentBase

.auth-layout-root {
    height: 100%;
}

.auth-layout-grid {
    height: 100%;
}

@media (max-width: 1279.95px) {
    .auth-layout-quote-container {
        display: none;
    }
}

.auth-layout-content {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.auth-layout-content-header {
    display: flex;
    align-items: center;
    padding-top: 40px;
    padding-left: 16px;
    padding-right: 16px;
    padding-bottom: 16px;
}

.auth-layout-content-body {
    display: flex;
    flex-grow: 1;
    align-items: center;
}

@media (max-width: 1279.95px) {
    .auth-layout-content-body {
        justify-content: center;
    }
}
