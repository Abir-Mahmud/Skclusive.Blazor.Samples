@namespace Skclusive.Dashboard.App.View
@inherits StyleComponentBase

.auth-quote-root {
    height: 100%;
    display: flex;
    align-items: center;
    background-size: cover;
    justify-content: center;
    background-image: url(./_content/Skclusive.Dashboard.App.View/images/auth.jpg);
    background-repeat: no-repeat;
    background-position: center;
}

.auth-quote-inner {
    flex-basis: 600px;
    text-align: center;
}

.auth-quote-text {
    color: #ffffff;
    font-weight: 300;
}

.auth-quote-name {
    color: #ffffff;
    margin-top: 24px;
}

.auth-quote-bio {
    color: #ffffff;
}
